apiVersion: kafka.strimzi.io/v1alpha1
kind: Kafka
metadata: 
  name: user
spec:
  kafka:
    version: 2.4.0
    replicas: {{ num_kafka_brokers }}
    listeners:
      plain: {}
      tls: {}
      external:
        type: route
    storage:
      type: ephemeral
    resources:
      limits:
        memory: 2Gi
      requests:
        memory: 2Gi
    jvmOptions:
      '-Xms': 1024m
      '-Xmx': 1024m
      gcLoggingEnabled: false
    resources:
      limits:
        memory: 1Gi
      requests:
        memory: 1Gi
  zookeeper:
    replicas: {{ num_zk_nodes }}
    storage:
      type: ephemeral
    jvmOptions:
      gcLoggingEnabled: false
  entityOperator:
    topicOperator:
      jvmOptions:
        gcLoggingEnabled: false
      resources:
        limits:
          memory: 256Mi
        requests:
          memory: 256Mi
    userOperator:
      jvmOptions:
        gcLoggingEnabled: false
      resources:
        limits:
          memory: 256Mi
        requests:
          memory: 256Mi